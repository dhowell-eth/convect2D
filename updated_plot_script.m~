% Remember full file needs to be transposed once subsetted
full = load('T_field.dat');
full_phi = load('phi_field.dat');

times = unique(full(:,1));

data_times = full(:,1);
full_data = full(:,2:end);
full_data_phi = full_phi(:,2:end);

figure(1)
h1 = subplot(2,1,1);
h2 = subplot(2,1,2);

%% 
for i=1:length(times)
   this_time = times(i);
   test = find(data_times==times(i));
   this_data = full_data(test,:)';
   this_data_phi = full_data_phi(test,:)';
   
   contourf(h1,this_data_phi);
   title(h1,strcat('Stream Function: t= ',num2str(this_time)));
   contourf(h2,this_data);
   title(strcat('Temperature: t= ',num2str(this_time)));
   pause(1);
end

